{# Primary Button #}
{% macro primaryButton(href, text) %}
  <a href="{{ href }}" class="px-4 py-2 bg-secondary text-white rounded-sm hover:bg-opacity-90 transition-colors">
    {{ text }}
  </a>
{% endmacro %}
{# Secondary Button/Link #}
{% macro secondaryButton(href, text) %}
  <a href="{{ href }}" class="text-white hover:text-secondary transition-colors">
    {{ text }}
  </a>
{% endmacro %}
{# Outlined Button/Link #}
{% macro outlinedButton(href, text) %}
  <a href="{{ href }}" class="px-4 py-2 bg-transparent text-primary border border-primary rounded-sm hover:bg-primary hover:text-white transition-colors">
    {{ text }}
  </a>
{% endmacro %}
{# Navigation Link #}
{% macro navLink(href, text) %}
  <a href="{{ href }}" class="text-white hover:text-secondary transition-colors">
    {{ text }}
  </a>
{% endmacro %}
{# Inline Link #}
{% macro link(href, text) %}
  <a href="{{ href }}" class="text-secondary hover:text-primary transition-colors">
    {{ text }}
  </a>
{% endmacro %}