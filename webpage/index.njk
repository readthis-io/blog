{% extends "_frame.njk" %} 

{%block content %}

<div class="wrapper">
  <div class="content">

<h1>ReadThis.io</h1>

<p class="pt-6 space-y-4">
  Welcome to ReadThis.
</p>

{% for blog in blogs %}
  <a 
    href="/blog/{{blog.slug}}" 
    class="blog"
  >  
    {{blog.description | safe}}
  </a>
{% endfor %}
</div>

<div class="pagination">
  
  <ul>
    {% for i in range(1, total + 1) %}
    <li>
      <a 
        href="/{{i}}" 
        class="{{ "active" if i == current else "inactive" }}"
      >
        {{i}}
      </a>
    </li>
    {% endfor %}
  </ul>
</div>

</div>

{% endblock %} 